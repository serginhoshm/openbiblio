.title reportCheckouts
.category Circulation
.column bibid hidden
.column copyid hidden
.column mbrid hidden
.column barcode_nmbr sort=barcode_nmbr title="Cód. barras da cópia"
.column title sort=title func=biblio_link title="Título"
.column author sort=author title="Autor"
.column member_bcode sort=member_bcode title="Cód. barras do membro"
.column name sort=name func=member_link title="Nome"
.column status_begin_dt sort=status_begin_dt title="Data de empréstimo"
.column due_back_dt sort=due_back_dt title="Data de devolução"
.parameters
.	date due_before title="Due before"
.	date out_since title="Out since"
.	order_by
.		item barcode_nmbr expr='c.barcode_nmbr' title="Cód. de barras da cópia"
.		item title title="Titulo"
.		item author title="Autor"
.		item member_bcode expr='m.barcode_nmbr' title="Cód de barras do membro"
.		item name expr="concat(m.last_name, ', ', m.first_name)" title="Nome"
.		item status_begin_dt title="Data de empréstimo"
.		item due_back_dt title="Data de devolução"
.	end order_by
.end parameters
.sql
	select c.bibid, c.copyid, m.mbrid, c.barcode_nmbr,
		b.title, b.author, DATE_FORMAT(c.status_begin_dt, "%%d/%%m/%%Y") as status_begin_dt,
		DATE_FORMAT(c.due_back_dt, "%%d/%%m/%%Y") as due_back_dt, m.barcode_nmbr member_bcode,
		concat(m.last_name, ', ', m.first_name) name
	from biblio b, biblio_copy c, member m
	where b.bibid = c.bibid
		and c.mbrid = m.mbrid
		and c.status_cd = 'out'
.	if_set due_before
		and c.due_back_dt <= %due_before%
.	end if_set
.	if_set out_since
		and c.status_begin_dt >= %out_since%
.	end if_set
.	order_by_expr
.end sql
